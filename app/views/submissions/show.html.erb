<div class="container">

  <p>
    <strong>Title:</strong>
    <%= @submission.title %>
  </p>

  <p>
    <strong>Url:</strong>
    <%= @submission.url %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @submission.content %>
  </p>
  <%if @submission.user == current_user %>
    <%= link_to 'Edit', edit_submission_path(@submission) %> |
  <% end %>
  <%= link_to 'Back', submissions_path %>
</div>
